<configuration>
	<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
		<Marker>performance</Marker>
		<OnMatch>ALLOW</OnMatch>
	</turboFilter>
	<turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
		<Marker>entityStore</Marker>
		<OnMatch>DENY</OnMatch>
	</turboFilter>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%d [%t] %C &lt;%level&gt; - %m%n</Pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${user.home}/.astah/${astah.edition}/astah.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>${user.home}/.astah/${astah.edition}/.%i.log.zip</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>3</MaxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>3MB</MaxFileSize>
		</triggeringPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<Pattern>%d [%t] %C &lt;%level&gt; - %m%n</Pattern>
		</encoder>
	</appender>


	<root level="TRACE">
		<appender-ref ref="STDOUT" />
	</root>
	<logger name="com.change_vision" level="${rootLevel:-INFO}">
		<appender-ref ref="FILE" />
	</logger>
	<logger name="JP.co.esm.caddies" level="${rootLevel:-INFO}">
		<appender-ref ref="FILE" />
	</logger>

</configuration>
